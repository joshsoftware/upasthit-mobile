<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="dataModel"
            type="com.upasthit.data.model.local.db.tables.Timing" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewWeekDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center_vertical|start"
            android:padding="10dp"
            android:text="@{dataModel.day}"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".005"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideVer30"
            app:layout_constraintStart_toStartOf="@+id/guideVer30"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewOpenTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text="@{dataModel.start_time}"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".005"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideVer30"
            app:layout_constraintStart_toStartOf="@+id/guideVer30"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewCloseTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:text="@{dataModel.close_time}"
            android:textSize="14sp" />

    </LinearLayout>

</layout>